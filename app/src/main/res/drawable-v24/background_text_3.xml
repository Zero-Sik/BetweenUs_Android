<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#a0696969"
                android:endColor="#a0696969"/>
            <padding
                android:left="2px"
                android:right="2px"
                android:top="2px" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="?android:textColorPrimaryInverse" />
            <padding
                android:left="1px"
                android:right="1px"
                android:top="1px" />
        </shape>
    </item>
</layer-list>
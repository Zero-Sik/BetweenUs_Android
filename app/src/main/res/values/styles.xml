<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorText</item>
    </style>

    <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:headerBackground">@color/colorSubDark</item>
        <item name="android:numbersTextColor">#fff</item>
        <item name="android:numbersSelectorColor">@color/colorPrimary</item>
        <item name="android:numbersBackgroundColor">#ffdddddd</item>
    </style>

</resources>

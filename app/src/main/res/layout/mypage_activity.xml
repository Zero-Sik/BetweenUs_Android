<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">


        <ImageView
            android:id="@+id/background_yellow"
            android:layout_width="415dp"
            android:layout_height="173dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background_mypage_square" />

        <ImageView
            android:id="@+id/join_code_btn"
            android:layout_width="408dp"
            android:layout_height="216dp"
            app:layout_constraintEnd_toStartOf="@+id/layout"
            app:layout_constraintHorizontal_bias="0.002"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_yellow"
            app:srcCompat="@drawable/background_text_3"
            tools:ignore="NotSibling" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_imageview"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/dslr_camera_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/background_yellow"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nanum_squareb"
            android:text="Grade"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/join_code_btn"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="@+id/join_code_btn"
            app:layout_constraintTop_toBottomOf="@+id/user_imageview" />

        <TextView
            android:id="@+id/school_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nanum_squareb"
            android:text="School"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/join_code_btn"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="@+id/join_code_btn"
            app:layout_constraintTop_toBottomOf="@+id/user_imageview" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nanum_squareeb"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="@+id/join_code_btn"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="@+id/join_code_btn"
            app:layout_constraintTop_toBottomOf="@+id/user_imageview" />

        <ImageView
            android:id="@+id/profile_edit_btn"
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/join_code_btn"
            app:srcCompat="@drawable/background_search_edittext" />

        <ImageView
            android:id="@+id/profile_edit_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_edit_btn"
            app:layout_constraintStart_toStartOf="@+id/profile_edit_btn"
            app:layout_constraintTop_toTopOf="@+id/profile_edit_btn"
            app:srcCompat="@drawable/pencil" />

        <TextView
            android:id="@+id/profile_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nanum_squareb"
            android:text="내 프로필 변경"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_edit_btn"
            app:layout_constraintEnd_toEndOf="@+id/join_code_btn"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/join_code_btn"
            app:layout_constraintTop_toTopOf="@+id/profile_edit_btn"
            app:layout_constraintVertical_bias="0.57" />

        <ImageView
            android:id="@+id/profile_edit_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_edit_btn"
            app:layout_constraintEnd_toEndOf="@+id/profile_edit_btn"
            app:layout_constraintTop_toTopOf="@+id/profile_edit_btn"
            app:srcCompat="@drawable/arrowforward" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        tools:context=".view.activity.SignupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/background_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_camera"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/school_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:text="학교"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:text="ID"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/id_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="@+id/id_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/id_title"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

        <TextView
            android:id="@+id/password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:text="비밀번호"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_title"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/password_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="@+id/password_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/password_title"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

        <TextView
            android:id="@+id/re_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:text="비밀번호 확인"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_title"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/re_password_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/re_password_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/re_password_title"
            tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

        <EditText
            android:id="@+id/class_text"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="52dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/class_title"
            app:layout_constraintStart_toEndOf="@+id/class_title"
            app:layout_constraintTop_toTopOf="@+id/class_title"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

        <EditText
            android:id="@+id/grade_text"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:inputType="phone"
            app:layout_constraintBottom_toBottomOf="@+id/grade_title"
            app:layout_constraintStart_toEndOf="@+id/grade_title"
            app:layout_constraintTop_toTopOf="@+id/grade_title"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

        <TextView
            android:id="@+id/class_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:text="반"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grade_title"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/grade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:text="학년"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/school_title"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/school_text"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:inputType="phone"
            app:layout_constraintBottom_toBottomOf="@+id/school_title"
            app:layout_constraintStart_toEndOf="@+id/school_title"
            app:layout_constraintTop_toTopOf="@+id/school_title"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

        <EditText
            android:id="@+id/phone_number_text"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/edit_radius"
            android:fontFamily="@font/nanum_squarer"
            android:hint="010-0000-0000"
            android:inputType="phone"
            android:paddingStart="8dp"
            android:textSize="5pt"
            app:layout_constraintBottom_toBottomOf="@+id/phone_number_title"
            app:layout_constraintStart_toEndOf="@+id/phone_number_title"
            app:layout_constraintTop_toTopOf="@+id/phone_number_title"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/signup_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_register"
            android:fontFamily="@font/nanum_squareb"
            android:gravity="center"
            android:padding="10dp"
            android:text="∨ 회원가입"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:text="이름"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_password_title"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/phone_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:text="전화번호"
            android:textColor="@color/colorBlack"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/class_title"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>